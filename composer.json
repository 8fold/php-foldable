{
  "name": "8fold/php-foldable",
  "description": "Foundation for developing Fluent Interfaces and the Pipeline Pattern",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^8.0",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.10",
    "phpspec/phpspec": "^7.1",
    "phpstan/phpstan": "^0.12.99",
    "overtrue/phplint": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Eightfold\\Foldable\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eightfold\\Foldable\\Tests\\": "./tests/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "prefer-stable": true,
  "scripts": {
    "spec": "./vendor/bin/phpspec run",
    "stan": "./vendor/bin/phpstan analyze",
    "lint": "./vendor/bin/phplint ./ --exclude=vendor",
    "style": "./vendor/bin/phpcs --standard=PSR12 ./src",
    "production": ["@spec", "@stan", "@lint", "@style"],
    "prod": "@production"
  }
}
